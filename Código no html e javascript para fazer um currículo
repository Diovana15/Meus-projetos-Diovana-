            max-width: 800px;
            box-sizing: border-box;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 25px;
        }

        /* Estilização do Formulário */
        #resumeForm .form-group {
            margin-bottom: 15px;
        }

        #resumeForm label {
            display: block;
            margin-bottom: 5px;
